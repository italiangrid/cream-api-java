<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.glite.ce</groupId>
    <artifactId>cream-parent</artifactId>
    <version>1.15</version>
  </parent>

  <groupId>org.glite.ce</groupId>
  <artifactId>cream-api-java</artifactId>
  <version>${creamapi.version}</version>
  <packaging>jar</packaging>

  <build>
  
    <plugins>
    
      <plugin>
        <groupId>org.apache.axis2</groupId>
        <artifactId>axis2-wsdl2code-maven-plugin</artifactId>
        <version>1.6.1</version>
        <executions>

          <execution>
            <goals>
              <goal>wsdl2code</goal>
            </goals>
            <configuration>
              <packageName>org.glite.ce.creamapi.ws.cream2</packageName>
              <wsdlFile>${wsdls.path}/org.glite.ce-cream2_service.wsdl</wsdlFile>
              <databindingName>adb</databindingName>
              <serviceName>CREAM</serviceName>
              <namespaceURIs>
                <namespaceURI>
                  <uri>http://glite.org/2007/11/ce/cream/types</uri>
                  <packageName>org.glite.ce.creamapi.ws.cream2.types</packageName>
                </namespaceURI>
                <namespaceURI>
                  <uri>http://glite.org/ce/faults</uri>
                  <packageName>org.glite.ce.creamapi.ws.cream.faults</packageName>
                </namespaceURI>
                <namespaceURI>
                  <uri>http://www.gridsite.org/namespaces/delegation-2</uri>
                  <packageName>org.glite.ce.security.delegation</packageName>
                </namespaceURI>
              </namespaceURIs>
              <syncMode>sync</syncMode>
              <generateServerSide>true</generateServerSide>
              <generateServicesXml>true</generateServicesXml>
              <generateServerSideInterface>true</generateServerSideInterface>
              <unwrap>true</unwrap>
              <generateAllClasses>true</generateAllClasses>
            </configuration>
          </execution>

          <execution>
            <id>delegation</id>
            <goals>
              <goal>wsdl2code</goal>
            </goals>
            <configuration>
              <packageName>org.glite.ce.security.delegation</packageName>
              <wsdlFile>${wsdls.path}/www.gridsite.org-delegation-2.0.0.wsdl</wsdlFile>
              <databindingName>adb</databindingName>
              <serviceName>DelegationService</serviceName>
              <namespaceURIs>
                <namespaceURI>
                  <uri>http://www.gridsite.org/namespaces/delegation-2</uri>
                  <packageName>org.glite.ce.security.delegation</packageName>
                </namespaceURI>
              </namespaceURIs>
              <syncMode>sync</syncMode>
              <generateServerSide>true</generateServerSide>
              <generateServicesXml>true</generateServicesXml>
              <generateServerSideInterface>true</generateServerSideInterface>
              <unwrap>true</unwrap>
              <generateAllClasses>true</generateAllClasses>
            </configuration>
          </execution>

          <execution>
            <id>create-activity</id>
            <goals>
              <goal>wsdl2code</goal>
            </goals>
            <configuration>
              <packageName>org.glite.ce.creamapi.ws.es.creation</packageName>
              <wsdlFile>${wsdls.path}/es/CreationService.wsdl</wsdlFile>
              <databindingName>adb</databindingName>
              <serviceName>CreationService</serviceName>
              <namespaceURIs>
                <namespaceURI>
                  <uri>http://www.eu-emi.eu/es/2010/12/adl</uri>
                  <packageName>org.glite.ce.creamapi.ws.es.adl</packageName>
                </namespaceURI>
                <namespaceURI>
                  <uri>http://www.eu-emi.eu/es/2010/12/creation</uri>
                  <packageName>org.glite.ce.creamapi.ws.es.creation</packageName>
                </namespaceURI>
                <namespaceURI>
                  <uri>http://www.eu-emi.eu/es/2010/12/creation/types</uri>
                  <packageName>org.glite.ce.creamapi.ws.es.creation.types</packageName>
                </namespaceURI>
                <namespaceURI>
                  <uri>http://www.eu-emi.eu/es/2010/12/types</uri>
                  <packageName>org.glite.ce.creamapi.ws.es.creation.types</packageName>
                </namespaceURI>
                <namespaceURI>
                  <uri>http://schemas.ogf.org/glue/2009/03/spec_2.0_r1</uri>
                  <packageName>org.glite.ce.creamapi.ws.es.glue</packageName>
                </namespaceURI>
              </namespaceURIs>
              <syncMode>sync</syncMode>
              <generateServerSide>true</generateServerSide>
              <generateServicesXml>true</generateServicesXml>
              <generateServerSideInterface>true</generateServerSideInterface>
              <unwrap>false</unwrap>
              <generateAllClasses>true</generateAllClasses>
            </configuration>
          </execution>

          <execution>
            <id>activity-info</id>
            <goals>
              <goal>wsdl2code</goal>
            </goals>
            <configuration>
              <packageName>org.glite.ce.creamapi.ws.es.activityinfo</packageName>
              <wsdlFile>${wsdls.path}/es/ActivityInfoService.wsdl</wsdlFile>
              <databindingName>adb</databindingName>
              <serviceName>ActivityInfoService</serviceName>
              <namespaceURIs>
                <namespaceURI>
                  <uri>http://www.eu-emi.eu/es/2010/12/activity</uri>
                  <packageName>org.glite.ce.creamapi.ws.es.activityinfo</packageName>
                </namespaceURI>
                <namespaceURI>
                  <uri>http://www.eu-emi.eu/es/2010/12/activity/types</uri>
                  <packageName>org.glite.ce.creamapi.ws.es.activityinfo.types</packageName>
                </namespaceURI>
                <namespaceURI>
                  <uri>http://www.eu-emi.eu/es/2010/12/types</uri>
                  <packageName>org.glite.ce.creamapi.ws.es.activityinfo.types</packageName>
                </namespaceURI>
                <namespaceURI>
                  <uri>http://schemas.ogf.org/glue/2009/03/spec_2.0_r1</uri>
                  <packageName>org.glite.ce.creamapi.ws.es.glue</packageName>
                </namespaceURI>
              </namespaceURIs>
              <syncMode>sync</syncMode>
              <generateServerSide>true</generateServerSide>
              <generateServicesXml>true</generateServicesXml>
              <generateServerSideInterface>true</generateServerSideInterface>
              <unwrap>false</unwrap>
              <generateAllClasses>true</generateAllClasses>
            </configuration>
          </execution>

          <execution>
            <id>activity-management</id>
            <goals>
              <goal>wsdl2code</goal>
            </goals>
            <configuration>
              <packageName>org.glite.ce.creamapi.ws.es.activitymanagement</packageName>
              <wsdlFile>${wsdls.path}/es/ActivityManagementService.wsdl</wsdlFile>
              <databindingName>adb</databindingName>
              <serviceName>ActivityManagementService</serviceName>
              <namespaceURIs>
                <namespaceURI>
                  <uri>http://www.eu-emi.eu/es/2010/12/activitymanagement</uri>
                  <packageName>org.glite.ce.creamapi.ws.es.activitymanagement</packageName>
                </namespaceURI>
                <namespaceURI>
                  <uri>http://www.eu-emi.eu/es/2010/12/activitymanagement/types</uri>
                  <packageName>org.glite.ce.creamapi.ws.es.activitymanagement.types</packageName>
                </namespaceURI>
                <namespaceURI>
                  <uri>http://www.eu-emi.eu/es/2010/12/types</uri>
                  <packageName>org.glite.ce.creamapi.ws.es.activitymanagement.types</packageName>
                </namespaceURI>
                <namespaceURI>
                  <uri>http://www.eu-emi.eu/es/2010/12/activity/types</uri>
                  <packageName>org.glite.ce.creamapi.ws.es.activitymanagement.types</packageName>
                </namespaceURI>
                <namespaceURI>
                  <uri>http://schemas.ogf.org/glue/2009/03/spec_2.0_r1</uri>
                  <packageName>org.glite.ce.creamapi.ws.es.glue</packageName>
                </namespaceURI>
              </namespaceURIs>
              <syncMode>sync</syncMode>
              <generateServerSide>true</generateServerSide>
              <generateServicesXml>true</generateServicesXml>
              <generateServerSideInterface>true</generateServerSideInterface>
              <unwrap>false</unwrap>
              <generateAllClasses>true</generateAllClasses>
            </configuration>
          </execution>

          <execution>
            <id>es-delegation</id>
            <goals>
              <goal>wsdl2code</goal>
            </goals>
            <configuration>
              <packageName>org.glite.ce.creamapi.ws.es.delegation</packageName>
              <wsdlFile>${wsdls.path}/es/DelegationService.wsdl</wsdlFile>
              <databindingName>adb</databindingName>
              <serviceName>DelegationService</serviceName>
              <namespaceURIs>
                <namespaceURI>
                  <uri>http://www.eu-emi.eu/es/2010/12/delegation</uri>
                  <packageName>org.glite.ce.creamapi.ws.es.delegation</packageName>
                </namespaceURI>
                <namespaceURI>
                  <uri>http://www.eu-emi.eu/es/2010/12/delegation/types</uri>
                  <packageName>org.glite.ce.creamapi.ws.es.delegation.types</packageName>
                </namespaceURI>
                <namespaceURI>
                  <uri>http://www.eu-emi.eu/es/2010/12/types</uri>
                  <packageName>org.glite.ce.creamapi.ws.es.delegation.types</packageName>
                </namespaceURI>
                <namespaceURI>
                  <uri>http://schemas.ogf.org/glue/2009/03/spec_2.0_r1</uri>
                  <packageName>org.glite.ce.creamapi.ws.es.glue</packageName>
                </namespaceURI>
              </namespaceURIs>
              <syncMode>sync</syncMode>
              <generateServerSide>true</generateServerSide>
              <generateServicesXml>true</generateServicesXml>
              <generateServerSideInterface>true</generateServerSideInterface>
              <unwrap>false</unwrap>
              <generateAllClasses>true</generateAllClasses>
            </configuration>
          </execution>

          <execution>
            <id>resource-info</id>
            <goals>
              <goal>wsdl2code</goal>
            </goals>
            <configuration>
              <packageName>org.glite.ce.creamapi.ws.es.resourceinfo</packageName>
              <wsdlFile>${wsdls.path}/es/ResourceInfoService.wsdl</wsdlFile>
              <databindingName>adb</databindingName>
              <serviceName>ResourceInfoService</serviceName>
              <namespaceURIs>
                <namespaceURI>
                  <uri>http://www.eu-emi.eu/es/2010/12/resourceinfo</uri>
                  <packageName>org.glite.ce.creamapi.ws.es.resourceinfo</packageName>
                </namespaceURI>
                <namespaceURI>
                  <uri>http://www.eu-emi.eu/es/2010/12/resourceinfo/types</uri>
                  <packageName>org.glite.ce.creamapi.ws.es.resourceinfo.types</packageName>
                </namespaceURI>
                <namespaceURI>
                  <uri>http://www.eu-emi.eu/es/2010/12/types</uri>
                  <packageName>org.glite.ce.creamapi.ws.es.resourceinfo.types</packageName>
                </namespaceURI>
                <namespaceURI>
                  <uri>http://schemas.ogf.org/glue/2009/03/spec_2.0_r1</uri>
                  <packageName>org.glite.ce.creamapi.ws.es.glue</packageName>
                </namespaceURI>
              </namespaceURIs>
              <syncMode>sync</syncMode>
              <generateServerSide>true</generateServerSide>
              <generateServicesXml>true</generateServicesXml>
              <generateServerSideInterface>true</generateServerSideInterface>
              <unwrap>false</unwrap>
              <generateAllClasses>true</generateAllClasses>
            </configuration>
          </execution>

        </executions>
      </plugin>
      
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
      
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.4</version>
        <executions>

          <execution>
            <id>cream-skeleton</id>
            <phase>package</phase>
            <goals><goal>jar</goal></goals>
            <configuration>
              <finalName>cream-skeleton</finalName>
              <includes>
                <include>org/glite/ce/creamapi/ws/cream2/**</include>
              </includes>
              <archive>
                <index>true</index>
                <manifest><addDefaultSpecificationEntries/></manifest>
              </archive>
            </configuration>
          </execution>

          <execution>
            <id>delegation-skeleton</id>
            <phase>package</phase>
            <goals><goal>jar</goal></goals>
            <configuration>
              <finalName>ce-delegation-skeleton</finalName>
              <includes>
                <include>org/glite/ce/security/delegation/**</include>
              </includes>
              <archive>
                <index>true</index>
                <manifest><addDefaultSpecificationEntries/></manifest>
              </archive>
            </configuration>
          </execution>

          <execution>
            <id>es-skeleton</id>
            <phase>package</phase>
            <goals><goal>jar</goal></goals>
            <configuration>
              <finalName>cream-es-skeleton</finalName>
              <includes>
                <include>org/glite/ce/creamapi/ws/es/**/*.class</include>
              </includes>
              <archive>
                <index>true</index>
                <manifest><addDefaultSpecificationEntries/></manifest>
              </archive>
            </configuration>
          </execution>

          <!-- this must be the project's main artifact -->
          <execution>
            <id>default-jar</id>
            <phase>package</phase>
            <goals><goal>jar</goal></goals>
            <configuration>
              <excludes>
                <exclude>org/glite/ce/creamapi/ws/**</exclude>
                <exclude>org/glite/ce/security/delegation/**</exclude>
              </excludes>
              <archive>
                <index>true</index>
                <manifest><addDefaultSpecificationEntries/></manifest>
              </archive>
            </configuration>
          </execution>

        </executions>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-install-plugin</artifactId>
        <version>2.3</version>
        <executions>
        
          <execution>
            <id>install-cream-skeleton</id>
            <phase>install</phase>
            <goals><goal>install-file</goal></goals>
            <configuration>
              <file>${project.build.directory}/cream-skeleton.jar</file>
              <groupId>org.glite.ce</groupId>
              <artifactId>cream-skeleton</artifactId>
              <version>${project.version}</version>
              <packaging>jar</packaging>
            </configuration>
          </execution>
          
          <execution>
            <id>install-delegation-skeleton</id>
            <phase>install</phase>
            <goals><goal>install-file</goal></goals>
            <configuration>
              <file>${project.build.directory}/ce-delegation-skeleton.jar</file>
              <groupId>org.glite.ce</groupId>
              <artifactId>delegation-skeleton</artifactId>
              <version>${project.version}</version>
              <packaging>jar</packaging>
            </configuration>
          </execution>

          <execution>
            <id>install-es-skeleton</id>
            <phase>install</phase>
            <goals><goal>install-file</goal></goals>
            <configuration>
              <file>${project.build.directory}/cream-es-skeleton.jar</file>
              <groupId>org.glite.ce</groupId>
              <artifactId>es-skeleton</artifactId>
              <version>${project.version}</version>
              <packaging>jar</packaging>
            </configuration>
          </execution>

        </executions>
      </plugin>

    </plugins>

  </build>


  <dependencies>
  
    <dependency>
      <groupId>org.glite.jdl</groupId>
      <artifactId>jdl-api-java</artifactId>
      <version>${jdlapij.version}</version>
      <scope>compile</scope>
    </dependency>

    <dependency>
      <groupId>org.glite.ce</groupId>
      <artifactId>cream-common</artifactId>
      <version>${common.java.version}</version>
      <scope>compile</scope>
    </dependency>

    <dependency>
      <groupId>org.glite.security</groupId>
      <artifactId>trustmanager</artifactId>
      <version>${trustman.version}</version>
      <scope>compile</scope>
    </dependency>

    <dependency>
      <groupId>org.bouncycastle</groupId>
      <artifactId>bcprov-jdk15</artifactId>
      <version>${bcprov.version}</version>
      <scope>compile</scope>
    </dependency>

    <dependency>
      <groupId>org.apache.axis2</groupId>
      <artifactId>axis2</artifactId>
      <version>${axis2.version}</version>
      <scope>compile</scope>
    </dependency>
    
    <dependency>
      <groupId>org.apache.ws.commons.axiom</groupId>
      <artifactId>axiom-api</artifactId>
      <version>${axiom.version}</version>
      <scope>compile</scope>
    </dependency>

    <dependency>
      <groupId>wsdl4j</groupId>
      <artifactId>wsdl4j</artifactId>
      <version>${wsdl4j.version}</version>
      <scope>compile</scope>
    </dependency>

    <dependency>
      <groupId>org.condor</groupId>
      <artifactId>classad</artifactId>
      <version>${classad.version}</version>
      <scope>compile</scope>
    </dependency>

    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>${log4j.version}</version>
      <scope>compile</scope>
    </dependency>

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>${junit.version}</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
</project>
